<Window x:Class="AcsamenWPf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcsamenWPf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid CanUserAddRows="True" AutoGenerateColumns="False" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Name="dataGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Город" Width="50*" Binding="{Binding City}"/>
                <DataGridTextColumn Header="Цена" Width="50*" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Прибыль" Width="50*" Binding="{Binding Profit}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
